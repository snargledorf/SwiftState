<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <TargetFrameworks>net10.0;net8.0;net9.0</TargetFrameworks>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>SwiftState</Title>
        <Authors>Ryan Esteves</Authors>
        <Description>SwiftState is a lightweight, fluent state machine library</Description>
        <PackageProjectUrl>https://github.com/snargledorf/SwiftState</PackageProjectUrl>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <RepositoryUrl>https://github.com/snargledorf/SwiftState</RepositoryUrl>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    </PropertyGroup>   
    
    <ItemGroup>
        <None Include="$(SolutionDir)\LICENSE" Pack="true" PackagePath=""/>
    </ItemGroup>

</Project>
